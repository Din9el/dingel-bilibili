<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD MAPPER 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dingel.bilibili.dao.UserDao">

    <select id="getUserByPhone" parameterType="java.lang.String" resultType="com.dingel.bilibili.domain.User">
        select
            *
        from
            t_user()
        where
            phone = #{phone}
    </select>


    <insert id="addUser" parameterType="com.dingel.bilibili.domain.User" useGeneratedKeys="true" keyProperty="id">
        insert into
            t_user(
                phone,
                email,
                password,
                salt,
                creatTime
            )values (
                #{phone},
                #{email},
                #{password},
                #{salt},
                #{createTime}
            )
    </insert>

    <insert id="addUserInfo" parameterType="com.dingel.bilibili.domain.UserInfo" >
        insert into
            t_user_info(
            userId,
            nike,
            avatar,
            sign,
            gender,
            birth,
            creatTime
        )values (
            #{userId},
            #{nike},
            #{avatar},
            #{sign},
            #{gender},
            #{birth},
            #{createTime}
                )
    </insert>

</mapper>